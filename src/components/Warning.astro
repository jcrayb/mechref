---
const { id, title } = Astro.props;
---

<style>
    .background-red{
        background-color: #f0e0e0;
        border: 1px solid #444;
        border-radius: 5px;
    }
</style>


<div class="my-2">
    <div class="background-red d-flex flex-column">
        <div id={id} class='overflow-auto d-flex flex-row align-items-center'>
            <button class="btn btn-secondary" id={'warning_btn_'+id}>+</button>
            <div class="px-2">
                {"Warning: " + title}{<small>{` #${id}`}</small>}
            </div>
        </div>

        <div id={'warning_menu_'+id} class="p-2">
            <div class="w-100">
                <slot />
            </div>
        </div>
    </div>
</div>



<script define:vars={{id}} is:inline>
    $(document).ready(function(){
        const menu = $(`#warning_menu_${id}`)
        menu.hide();
        const button = $(`#warning_btn_${id}`);
        
        button.on('click', function(){
            menu.slideToggle('fast', function(){
                button.text(button.text() == '+' ? '-' : '+')
            })
        })
    });
</script>
